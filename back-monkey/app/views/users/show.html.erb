<div id="user_profile">
  <div class="consumption_list">
    <div class="consumption_summary">

      <div class="user_info">
        <div class="daily_info" id="alc_daily">
          <span class="big_num"><%= @user.daily_average_alcohol %></span>
          <p>drinks per day</p>
        </div>
        <div class="total_info">
          <span class="big_num"><%= @user.total_alcohol %></span>
          <p>drinks total</p>
        </div>
      </div>
      <div class="tips">
        <h3>Alcohol</h3>
        <p>Ethyl alcohol (C<sub>2</sub>H<sub>5</sub>OH) is a depressant intoxicant and the most commonly used drug in the world.</p>
      </div>
    </div>

    <div class="consumption_summary">
      <div class="user_info">
        <div class="daily_info" id="caff_daily">
          <span class="big_num"><%= @user.daily_average_caffeine %></span>
          <p>mgs caffeine per day</p>
        </div>
        <div class="total_info">
          <span class="big_num"><%= @user.total_caffeine %></span>
          <p>mgs caffeine total</p>
        </div>
      </div>
      <div class="tips">
      </div>
    </div>

    <div class="consumption_summary">
      <div class="user_info">
        <div class="daily_info"  id="nic_daily">
          <span class="big_num"><%= @user.daily_average_nicotine %></span>
          <p>mgs nicotine per day</p>
        </div>
        <div class="total_info">
          <span class="big_num"><%= @user.total_nicotine %></span>
          <p>mgs nicotine total</p>
        </div>
      </div>
      <div class="tips">
      </div>
    </div>
  </div>
</div>